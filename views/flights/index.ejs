<%- include('../partials/header') %>

  <table id="list">
    <thead>
      <tr>
        <th>Airline</th>
        <th>Flight No.</th>
        <th>Departure Date/Time</th>
        <th>Airline</th>
        <th>Flight Details</th>
      </tr>
    </thead>
    <tbody>
      <% flights.forEach(function(f) { %>
        <tr>
          <td><%= f.airline %></td>
          <td><%= f.flightNo %></td>
          <td><%= f.departs %></td>
          <td><%= f.airport %></td>
          <td><a id="detail" href="/flights/<%= f._id %>">Details</a></td>
        </tr>
      <% }); %>
    </tbody>
  </table>

<%- include('../partials/footer') %>